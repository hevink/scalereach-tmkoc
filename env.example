# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database?sslmode=require

# Authentication (Better Auth)
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3001

# Redis Configuration (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Worker Concurrency Configuration
VIDEO_WORKER_CONCURRENCY=2
CLIP_WORKER_CONCURRENCY=4

# SMTP Configuration (for sending emails)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM_EMAIL=noreply@scalereach.com
SMTP_FROM_NAME=Scalereach

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=scalereach-videos
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# YouTube Download (optional - for proxy/rate limiting)
# YOUTUBE_COOKIES_PATH=/path/to/cookies.txt

# Deepgram Speech-to-Text
DEEPGRAM_API_KEY=your-deepgram-api-key

# LLM for Viral Clip Detection
# Option 1: Azure OpenAI (recommended)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# Option 2: OpenAI (fallback)
# OPENAI_API_KEY=your-openai-api-key

# Option 3: Other providers
# GOOGLE_AI_API_KEY=your-gemini-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Dodo Payments Integration
DODO_PAYMENTS_API_KEY=your-dodo-api-key
DODO_WEBHOOK_SECRET=your-dodo-webhook-secret
DODO_ENVIRONMENT=test_mode  # or 'live_mode'

# OAuth (optional)
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io
SENTRY_DSN=
